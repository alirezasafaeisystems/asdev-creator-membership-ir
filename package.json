{
  "name": "asdev-creator-membership-ir",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "docs:validate": "node tools/docs-validator/validate.js",
    "phase:run": "bash tools/phase-runner/run.sh",
    "phase:run:push": "PHASE_RUNNER_PUSH=1 bash tools/phase-runner/run.sh",
    "dev": "pnpm -C apps/web dev",
    "api:dev": "pnpm -C apps/api dev",
    "build": "pnpm -C apps/api build && pnpm -C apps/web build",
    "roadmap:auto": "bash scripts/automation/run-roadmap.sh auto",
    "roadmap:semi": "bash scripts/automation/run-roadmap.sh semi",
    "roadmap:sync-next": "node scripts/automation/sync-next-from-phased-roadmap.js",
    "roadmap:sync-next:production": "node scripts/automation/sync-next-production.js",
    "evidence:record": "bash scripts/automation/record-local-evidence.sh all",
    "evidence:record:gates": "bash scripts/automation/record-local-evidence.sh gates",
    "evidence:record:smoke": "bash scripts/automation/record-local-evidence.sh smoke",
    "local:stack:start": "bash scripts/automation/local-stack-start.sh",
    "local:stack:stop": "bash scripts/automation/local-stack-stop.sh",
    "local:stack:status": "bash scripts/automation/local-stack-status.sh",
    "local:proxy:start": "bash scripts/automation/local-proxy-start.sh",
    "local:proxy:status": "bash scripts/automation/local-proxy-status.sh",
    "local:proxy:stop": "bash scripts/automation/local-proxy-stop.sh",
    "db:backup": "bash scripts/automation/db-backup.sh",
    "db:restore": "bash scripts/automation/db-restore.sh",
    "run:local:full": "bash scripts/automation/run-local-full.sh",
    "autopilot:phase-loop": "bash scripts/automation/autopilot-phase-loop.sh",
    "autopilot:phase-loop:runner": "AUTOPILOT_ROADMAP_RUNNER=1 AUTOPILOT_ROADMAP_MODE=semi bash scripts/automation/autopilot-phase-loop.sh",
    "autopilot:daemon:start": "bash scripts/automation/autopilot-daemon-start.sh",
    "autopilot:daemon:stop": "bash scripts/automation/autopilot-daemon-stop.sh",
    "autopilot:daemon:status": "bash scripts/automation/autopilot-daemon-status.sh",
    "status:local-report": "node scripts/automation/generate-local-status-report.js",
    "runtime:health:report": "bash scripts/automation/runtime-health-report.sh",
    "seed:local-demo": "bash scripts/automation/seed-local-demo-data.sh",
    "smoke:mock-payment": "bash scripts/automation/smoke-mock-payment.sh",
    "smoke:idpay-callback": "bash scripts/automation/smoke-idpay-callback.sh",
    "smoke:rbac-admin": "bash scripts/automation/smoke-rbac-admin.sh",
    "smoke:content-download": "bash scripts/automation/smoke-content-download.sh",
    "smoke:auth-session": "bash scripts/automation/smoke-auth-session.sh",
    "smoke:all": "bash scripts/automation/smoke-all.sh",
    "contracts:check": "node tools/contracts-check.js",
    "perf:check": "node tools/quality-performance.js",
    "test:regression": "pnpm -w test:integration && pnpm -w test:e2e",
    "lint": "node tools/quality-lint.js",
    "typecheck": "node tools/quality-typecheck.js",
    "test:unit": "node tools/quality-unit.js",
    "test:integration": "node tools/quality-integration.js",
    "test:e2e": "node tools/quality-e2e.js",
    "local-first:scan": "node tools/security/verify-local-first.js",
    "security:scan": "bash -lc 'if rg -n \"(ghp_[A-Za-z0-9]{20,}|sk_live_[A-Za-z0-9]+|-----BEGIN [A-Z ]*PRIVATE KEY-----|AKIA[0-9A-Z]{16})\" -S . --glob \"!**/.git/**\" --glob \"!**/node_modules/**\"; then echo SECRET_PATTERN_DETECTED; exit 1; else echo SECURITY_SCAN_OK; fi' && node tools/security/validate-sensitive-policies.js",
    "test": "node tools/quality-unit.js"
  }
}
